{
  "name": "hast-util-sanitize",
  "version": "1.2.0",
  "description": "Sanitize HAST nodes",
  "license": "MIT",
  "keywords": [
    "hast",
    "util",
    "sanitize"
  ],
  "repository": "syntax-tree/hast-util-sanitize",
  "bugs": "https://github.com/syntax-tree/hast-util-sanitize/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
    "Jason Switzer <jswitzer@gmail.com>"
  ],
  "files": [
    "lib",
    "index.js"
  ],
  "dependencies": {
    "xtend": "^4.0.1"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "deepmerge": "^2.0.0",
    "esmangle": "^1.0.1",
    "hast-util-to-html": "^3.0.0",
    "hastscript": "^3.0.0",
    "nyc": "^12.0.0",
    "prettier": "^1.13.5",
    "remark-cli": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "tape": "^4.0.0",
    "unist-builder": "^1.0.1",
    "xo": "^0.21.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write '**/*.js' && xo --fix",
    "build-bundle": "browserify index.js --bare -s hastUtilSanitize > hast-util-sanitize.js",
    "build-mangle": "esmangle hast-util-sanitize.js > hast-util-sanitize.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "no-negated-condition": "off",
      "guard-for-in": "off"
    },
    "ignores": [
      "hast-util-sanitize.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
